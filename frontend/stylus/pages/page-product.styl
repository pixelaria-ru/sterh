.page--product
  &__left
    max-width 370px
  &__right
    max-width 330px
    img
      max-height 220px
  &__discription
    margin-top 25px
    padding 20px
    border 1px solid #dadada
    p
      color #444444
      font-size 12px
      line-height 20px
  &__chart
    margin-top 25px
    img
      max-width 180px
    p
      color #444444
      font-size 12px
      line-height 20px
      margin-left 20px
  &__order
    margin-top 25px
    .button--blue
      padding 12px 38px
      margin-left 20px
  &__conditions
    margin-top 25px
    p
      color #444444
      font-size 12px
      line-height 20px
      display flex
      align-items center
      &:before
        content ''
        min-width 25px
        height 25px
        border 1px solid #0456a0
        margin-right 15px
        border-radius 50%
        display block
  &__speedbar
    margin-top 35px
    text-align right
    a,span
      color #c8c8c8
      font-size 12px
      text-decoration underline

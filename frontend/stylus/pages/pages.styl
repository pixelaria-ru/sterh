.bg-img
  height 740px
  position absolute
  left 0
  right 0
  top 0
  z-index -2
  &:after
    content ''
    background-image linear-gradient(180deg, #02549e 0%, rgba(216, 216, 216, 0) 100%)
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index 0
.page
    box-shadow 0 20px 6px -10px rgba(0, 0, 0, 0.05)
    background-color #ffffff
    padding 70px 60px
    margin-top 220px
    margin-bottom 150px
    h1
      color #444444
      font-size 36px
      font-weight 700
      line-height 48px
      margin-bottom 50px

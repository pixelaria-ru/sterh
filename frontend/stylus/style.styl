@import 'inc/fonts.styl'

@import 'plugins/wrd-reset.styl'
@import 'plugins/wrd-atomic.styl'

:root
  --green #98cb01

.bg-pattern
  &:before
    content ''
    background-image url('../svg/pattern.svg')
    background-color: #f6f6f6
  
    position fixed
    transform: translateZ(0)
    top 0
    bottom 0
    left 0
    right 0
    z-index -99
    opacity 0.1
.container
  max-width 1280px
  margin auto
  left 0
  right 0
  width 100%

.button
  &--nav
    color #0456a0
    font-size 14px
  &--blue
    background-color #0456a0
    color #ffffff
    font-size 14px
    padding 12px 22px
    text-transform uppercase
    transition .33s
    &:hover
        background-color #3F98E9

.modalus
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index -9
  opacity 0
  &:before
    cursor pointer
  &.active
    opacity 1
    z-index 9
    .form--order
      transform translateY(0)
.form--order
  position relative
  background #fff
  padding 50px
  max-width 400px
  transform translateY(200px)
  transition .33s
  &__input
    width 100%
    padding 20px
    box-shadow inset 0 0 10px rgba(0,0,0, .1)
    margin-top 15px
    &:first-child
      margin-top 0
  &__submit
    margin-top 15px
    width 100%
    padding 20px


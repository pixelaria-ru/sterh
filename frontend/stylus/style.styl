:root
  --green #98cb01

.bg-pattern
  &:before
    content ''
    background-image url('../svg/pattern.svg')
    background-color: #f6f6f6
    background-attachment fixed
    position fixed
    transform: translateZ(0)
    top 0
    bottom 0
    left 0
    right 0
    z-index -99
    opacity 0.1
.container
  max-width 1280px
  margin auto
  left 0
  right 0
  width 100%

.button
  &--nav
    color #0456a0
    font-size 14px
  &--blue
    background-color #0456a0
    color #ffffff
    font-size 14px
    padding 12px 22px
    text-transform uppercase



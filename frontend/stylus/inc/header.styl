.header
  position absolute
  top 0
  z-index 9
  padding-top 35px
  .logo
    margin-right 40px
    max-width 108px
    img
      object-fit contain
  &__item
    margin-right 23px
    position relative
    a
      color #ffffff
      font-size 14px
      font-weight 700
    &:hover
      .header__menu--dropdown
        opacity 1
        z-index: 1
        top 20px
  &__menu--dropdown
    position: absolute;
    width max-content
    z-index: -5
    opacity 0
    left 0
    top -100px
    transition .33s
    .header__item
      margin-top 15px
      a
        font-size 15px
        font-weight 400
  &__right
    text-align right
  &__contacts
    a
      color #ffffff
      &.tel
        font-size 18px
        font-weight 700
      &.mail
        font-size 12px
        margin-top 5px



.button-leed
  height 40px
  width 120px
  box-shadow 0 0 4px rgba(0, 0, 0, 0.1)
  background-color #1781e1
  transform rotate(-90deg)
  color #ffffff
  margin-top -6px
  font-size 14px
  line-height 3px
  position relative
  transition .33s
  &:hover
      background-color #3F98E9
  &:before
    content ''
    background-image url('../images/phone-receiver.png')
    width 16px
    height 16px
    display block
    margin-right 15px
    transform rotate(90deg)

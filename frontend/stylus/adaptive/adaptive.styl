@media(max-width: 760px)
  .page--news
    h1
      font-size 25px
      line-height 34px
  .page
    padding 70px
    &--product
      &__left,
      &__right
        max-width 100%
      &__right
       margin-top 50px
       img
        object-fit contain
    &__item--left
      width: 50%
  .main.bg-menu
    opacity: 0.3;
    filter: grayscale(1);
  .header
    &__nav
      position: fixed;
      top 0
      bottom 0
      left 0
      right 0
      z-index -5
      &.active
          z-index 5

    &__list
      position: absolute;
      background: #fff;
      opacity 0
      left: 20px;
      right: 20px;
      bottom: 0;
      padding: 50px;
      transform scale(0.5)
      transition: .33s
      transform-origin: bottom
      flex-direction: column;
      &.active
        opacity: 1

        transform scale(1)


      .header__item
        margin-top: 20px;
        margin-right 0
        a
          font-size: 20px;
          color: #424242;
    .logo
      margin-right: 0;

    &__hamburger
      margin-left 20px
      display flex
      flex-direction column
      cursor pointer
      background 0
      &.active
        span
          transform: scale(0)
        &:after
          width: 50px;
          transform: translate(0px,-12px) rotate(45deg);
        &:before
          transform: translate(0px,10px) rotate(-45deg);
      &:before
        content ''
        width 50px
        height 4px
        background-color #ffffff
        display block
        transition: .33s
      &:after
        content ''
        width 40px
        height 4px
        background-color #ffffff
        display block
        transition: .33s
      span
        width 30px
        display block
        height 4px
        margin-top 8px
        margin-bottom 8px
        background-color #ffffff
        transition: .33s



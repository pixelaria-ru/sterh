@media(max-width: 1280px)
  .section--shema
    display none


@media(max-width: 1270px)
  .header
    .logo
      margin-right 30px


@media(max-width: 1220px)
  .pd-200
    padding-left 40px
    padding-right 40px


@media(max-width: 1075px)
  .section--advantages
      &__tabs
        padding-left 40px
        .wrd-tabs
          margin-right 25px

@media(max-width: 965px)
  .product-card
      padding: 45px 30px
      img
        max-width 120px




@media(max-width: 950px)
  .section--goods
    .goods-item
      min-width 277px
      width calc(50% - 25px)
      margin-right 50px
      &__info
          width max-content


  .section--rent
    &__img
      &:before
        display none


@media(max-width: 950px) and (min-width: 661px)
  .section--goods
    .goods-item

      &:nth-child(2)
        margin-right 0
      &:last-child
        width 100%
        margin-top 50px
        max-height 230px
        flex-wrap wrap
        h3
          margin-top 22px

        .goods-item__img
          border-right 1px solid #dadada
          padding-right 50px
          margin-rgiht 50px

        .goods-item__list
          border-top 0
          padding-top 20px


@media(max-width: 900px)
  .header
    &__item
      margin-right 20px
  .button-leed
    display none


  .section--rent
    &__img
      width 290px

@media(max-width: 860px)
  .section--rent
    &__img
      width 240px

@media(max-width: 800px)
  .section--advantages
    img
      margin-top 0
  .section--rent
    &__img
      width 160px
    &__item
      &:last-child
        display none


@media(max-width: 760px)

  .header
    &__nav
      display none

@media(max-width: 725px)
  .product-card
    img
      object-fit contain
      max-width 100%
      max-height 220px
    &__info
      margin-top 35px
      margin-left 0
    a
      flex-direction column
  .section--rent
    &__img
      width 100%
    &__info
      margin-top 50px
@media(max-width: 700px)
  .section--goods
    .goods-item
      margin-right 20px
      &:last-child
        margin-top 20px
  .section--advantages
      &__tabs
        flex-direction column
        height max-content
        padding-top 50px
        padding-bottom 50px
@media(max-width: 660px)
  .section--advantages
    img
      float inherit
  .section--goods
    .goods-item
      width 100%
      margin-right 0
      margin-top 40px

@media(max-width: 625px)
  .product-card
    padding-bottom 78px
    &__item
      flex-direction column
      p
        &:first-child
          color #8f8f8f
    .button--blue
      top inherit
      bottom 0
      left 0
      width 100%
  .section--rent
      &__list
        flex-wrap wrap
      &__item
        width 50%
        &:nth-child(3),
        &:nth-child(4)
          margin-top 40px
        &:last-child
          display inherit


@media(max-width: 490px)
  .initial-screen-catalog
    h1
      max-width: 100%;
      word-break: break-all;
      font-size 45px
      margin-right: 0;
    p
        margin-left 0
        padding: 40px 0px;

@media(max-width: 455px)
  .section--rent
      padding-left 0
      padding-right 0
      &__list
        flex-wrap wrap
        padding-left 20px
        padding-right 20px
      &__info
        padding-left 20px
        padding-right 20px
      &__item
        width 100%
        &:nth-child(2)
          margin-top 40px


@media(max-width: 425px)
  .pd-200
    padding-left 20px
    padding-right 20px
  .section--rent
      padding-left 0
      padding-right 0
  .section--initial-screen
    p
      margin-left 0


@media(max-width: 360px)
  .section--advantages
      &__tabs
        padding-left 20px
        align-items flex-start
        .wrd-tabs
          margin-right 0

@media(max-width: 320px)
  .header
    .logo
        img
          width 30px
          height 30px
